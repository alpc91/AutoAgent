<workflow>
    <name>state_determination_workflow</name>
    <system_input>
        <key>task_description</key>
        <description>任务的详细描述，用于解析和确定目标。</description>
    </system_input>
    <system_output>
        <key>determined_objective</key>
        <description>经过解析和确认后的任务目标。</description>
    </system_output>
    <agents>
        <agent category="existing">
            <name>任务解析智能代理</name>
            <description>此代理用于对任务进行详细解析并提取关键内容。</description>
        </agent>
        <agent category="existing">
            <name>确定目标智能代理</name>
            <description>此代理用于根据解析后的任务内容，结合实际情况，确定最终目标。</description>
        </agent>
    </agents>
    <events>
        <event>
            <name>on_start</name>
            <inputs>
                <input>
                    <key>task_description</key>
                    <description>任务的详细描述，用于解析和确定目标。</description>
                </input>
            </inputs>
            <outputs>
                <output>
                    <key>task_description</key>
                    <description>任务的详细描述，用于解析和确定目标。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
        </event>
        <event>
            <name>parse_task</name>
            <inputs>
                <input>
                    <key>task_description</key>
                    <description>任务的详细描述，用于解析和确定目标。</description>
                </input>
            </inputs>
            <task>解析任务以提取关键信息。</task>
            <outputs>
                <output>
                    <key>parsed_task</key>
                    <description>解析后的任务关键信息。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>on_start</event>
            </listen>
            <agent>
                <name>任务解析智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
        <event>
            <name>determine_objective</name>
            <inputs>
                <input>
                    <key>parsed_task</key>
                    <description>解析后的任务关键信息。</description>
                </input>
            </inputs>
            <task>根据解析后的任务内容确定最终目标。</task>
            <outputs>
                <output>
                    <key>determined_objective</key>
                    <description>经过解析和确认后的任务目标。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>parse_task</event>
            </listen>
            <agent>
                <name>确定目标智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
    </events>
</workflow>