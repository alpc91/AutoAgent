<workflow>
    <name>goal_analysis_workflow</name>
    <system_input>
        <key>determined_state</key>
        <description>状态确定阶段输出的任务状态。</description>
    </system_input>
    <system_output>
        <key>adjusted_goals</key>
        <description>根据评估结果调整后的目标。</description>
    </system_output>
    <agents>
        <agent category="existing">
            <name>分解任务智能代理</name>
            <description>此代理用于将任务分解为多个子任务并分配目标。</description>
        </agent>
        <agent category="existing">
            <name>评估预测智能代理</name>
            <description>此代理用于对分解后的任务进行评估，并根据评估结果调整目标。</description>
        </agent>
    </agents>
    <events>
        <event>
            <name>on_start</name>
            <inputs>
                <input>
                    <key>determined_state</key>
                    <description>状态确定阶段输出的任务状态。</description>
                </input>
            </inputs>
            <outputs>
                <output>
                    <key>determined_state</key>
                    <description>状态确定阶段输出的任务状态。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
        </event>
        <event>
            <name>task_decomposition</name>
            <inputs>
                <input>
                    <key>determined_state</key>
                    <description>状态确定阶段输出的任务状态。</description>
                </input>
            </inputs>
            <task>将任务分解为多个子任务并分配目标。</task>
            <outputs>
                <output>
                    <key>sub_tasks</key>
                    <description>分解后的子任务列表。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>on_start</event>
            </listen>
            <agent>
                <name>分解任务智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
        <event>
            <name>goal_evaluation</name>
            <inputs>
                <input>
                    <key>sub_tasks</key>
                    <description>分解后的子任务列表。</description>
                </input>
            </inputs>
            <task>对分解后的任务进行评估，并根据评估结果调整目标。</task>
            <outputs>
                <output>
                    <key>adjusted_goals</key>
                    <description>根据评估结果调整后的目标。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>task_decomposition</event>
            </listen>
            <agent>
                <name>评估预测智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
    </events>
</workflow>