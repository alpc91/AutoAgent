<workflow>
    <name>state_determination_workflow</name>
    <system_input>
        <key>user_request</key>
        <description>用户提出的状态确定请求内容。</description>
    </system_input>
    <system_output>
        <key>determined_state</key>
        <description>经过解析和目标确认后的状态信息。</description>
    </system_output>
    <agents>
        <agent category="existing">
            <name>任务解析智能代理</name>
            <description>此代理用于解析用户提出的任务内容。</description>
        </agent>
        <agent category="existing">
            <name>确定目标智能代理</name>
            <description>此代理用于根据已解析的任务内容确定具体的目标。</description>
        </agent>
    </agents>
    <events>
        <event>
            <name>on_start</name>
            <inputs>
                <input>
                    <key>user_request</key>
                    <description>用户提出的状态确定请求内容。</description>
                </input>
            </inputs>
            <outputs>
                <output>
                    <key>user_request</key>
                    <description>用户提出的状态确定请求内容。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
        </event>
        <event>
            <name>task_parsing</name>
            <inputs>
                <input>
                    <key>user_request</key>
                    <description>用户提出的状态确定请求内容。</description>
                </input>
            </inputs>
            <task>
                解析用户任务。
            </task>
            <outputs>
                <output>
                    <key>parsed_task</key>
                    <description>解析后的任务内容。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>on_start</event>
            </listen>
            <agent>
                <name>任务解析智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
        <event>
            <name>target_determination</name>
            <inputs>
                <input>
                    <key>parsed_task</key>
                    <description>解析后的任务内容。</description>
                </input>
            </inputs>
            <task>
                根据解析后的任务内容确定目标。
            </task>
            <outputs>
                <output>
                    <key>determined_state</key>
                    <description>经过解析和目标确认后的状态信息。</description>
                    <action>
                        <type>RESULT</type>
                    </action>
                </output>
            </outputs>
            <listen>
                <event>task_parsing</event>
            </listen>
            <agent>
                <name>确定目标智能代理</name>
                <model>hosted_vllm/Qwen/QwQ-32B-AWQ</model>
            </agent>
        </event>
    </events>
</workflow>